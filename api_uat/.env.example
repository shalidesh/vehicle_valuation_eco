# Application Configuration
# Copy this file to .env and fill in the values
# DO NOT commit .env file to version control

# Application
APP_NAME=CDB Vehicle Valuation API
APP_VERSION=2.0.0
DEBUG=False

# Database Configuration
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://airflow:airflow@localhost:5432/airflow
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Security (CHANGE THESE IN PRODUCTION!)
# Generate strong secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_STRONG_SECRET_KEY_IN_PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Authentication Credentials (CHANGE THESE!)
AUTH_USERNAME=cdb
AUTH_PASSWORD=CHANGE_THIS_PASSWORD_IN_PRODUCTION
FIXED_ACCESS_TOKEN=your_fixed_token_here

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_RETENTION_DAYS=30
LOG_ROTATION=midnight
LOG_BACKUP_COUNT=30

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=100

# Server Configuration
HOST=0.0.0.0
PORT=8443
WORKERS=4
